{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "mix",
			"task": "Build",
			"problemMatcher": [
				"$mixCompileError",
				"$mixCompileWarning"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "mix: Build",
			"options": {
				"cwd": "${workspaceFolder}/exins"
			}
		},
		{
			"type": "mix",
			"task": "Build dependencies",
			"problemMatcher": [
				"$mixCompileError",
				"$mixCompileWarning"
			],
			"group": "build",
			"label": "mix: Build dependencies",
			"options": {
				"cwd": "${workspaceFolder}/exins"
			}
		},
		{
			"type": "mix",
			"task": "Get deps",
			"problemMatcher": [
				"$mixCompileError",
				"$mixCompileWarning"
			],
			"label": "mix: Get deps",
			"options": {
				"cwd": "${workspaceFolder}/exins"
			}
		},
		{
			"label": "iex: livebook",
			"type": "shell",
			"command": "iex",
			"args": [
				"--name",
				"app-node-1@host.exins",
				"--cookie",
				"exins-cookie",
				"-S",
				"mix",
				"phx.server"
			],
			"options": {
				"cwd": "${workspaceFolder}/exins"
			},
			"presentation": {
				"panel": "new",
				"reveal": "always",
				"revealProblems": "onProblem"
			},
			"problemMatcher": [
				"$mixCompileError",
				"$mixCompileWarning"
			]
		}
	]
}