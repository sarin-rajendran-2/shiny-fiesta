{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "mix: Rebuild",
			"type": "shell",
			"dependsOn": [
				"mix: Clean project",
				"mix: Build"
			],
			"problemMatcher": [
				"$mixCompileError"
			]
		},
		{
			"label": "mix: Ash Codegen",
			"type": "shell",
			"command": "mix",
			"args": [
				"ash.codegen",
				"--dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/exins"
			},
			"presentation": {
				"panel": "shared",
				"reveal": "silent",
				"revealProblems": "onProblem"
			}
		},
		{
			"label": "mix: Ash Migrate",
			"type": "shell",
			"command": "mix",
			"args": [
				"ash.migrate"
			],
			"options": {
				"cwd": "${workspaceFolder}/exins"
			},
			"presentation": {
				"panel": "shared",
				"reveal": "silent",
				"revealProblems": "onProblem"
			}
		},
		{
			"label": "iex: livebook",
			"type": "shell",
			"command": "iex",
			"args": [
				"--name",
				"app-node-1@host.exins",
				"--cookie",
				"exins-cookie",
				"-S",
				"mix",
				"phx.server"
			],
			"dependsOn": [
				"mix: Ash Codegen",
				"mix: Ash Migrate"
			],
			"options": {
				"cwd": "${workspaceFolder}/exins"
			},
			"presentation": {
				"panel": "new",
				"reveal": "always",
				"revealProblems": "onProblem"
			},
			"problemMatcher": [
				"$mixCompileError",
				"$mixCompileWarning"
			]
		}
	]
}